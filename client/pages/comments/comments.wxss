/* pages/comments/comments.wxss */
.container {
  padding-top: 40rpx;
}

.comment-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  background-color: white;
  border-bottom: 6rpx solid #EEEEEF;
}

.comment-container:first-of-type {
  border-top: 6rpx solid #EEEEEF;
}

.comment-container .comment-header {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  font-size: .8em;
}

.comment-header image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-container .comment-body {
  padding: 30rpx 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block; 
}